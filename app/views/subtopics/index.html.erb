<p id="notice"><%= notice %></p>

<h1>Subtopics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sequence number</th>
      <th>Code</th>
      <th>Subject</th>
      <th>Standard</th>
      <th>Chapter</th>
      <th>Topic</th>
      <th>Stream</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtopics.each do |subtopic| %>
      <tr>
        <td><%= subtopic.name %></td>
        <td><%= subtopic.sequence_number %></td>
        <td><%= subtopic.code %></td>
        <td><%= subtopic.subject %></td>
        <td><%= subtopic.standard %></td>
        <td><%= subtopic.chapter %></td>
        <td><%= subtopic.topic %></td>
        <td><%= subtopic.stream %></td>
        <td><%= link_to 'Show', subtopic %></td>
        <td><%= link_to 'Edit', edit_subtopic_path(subtopic) %></td>
        <td><%= link_to 'Destroy', subtopic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

